<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/styleresult.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  </head>
  <body>
    <h1 id="title"><%= title %></h1>
    <form action="/sorgu" method="post">
      <div id="quey-box">
        <div id="query">
          <input type="text" placeholder="TC" name="tc">
          <input type="text" placeholder="AD" name="ad">
          <input type="text" placeholder="SOYAD" name="soyad">
          <input type="text" placeholder="NÜFUS İL" name="nufusil">
          <input type="text" placeholder="NÜFUS İLÇE" name="nufusilce">
          </div>
          
          <div class="d-grid gap-2 col-3 mx-auto" id="submitbtn">
            <button class="btn btn-primary" type="submit">SORGULA</button>
          </div>
      </div>
    </form>


    <div id="res-box">
      <h1>Kullanıcı Bilgileri</h1>
        <table>
            <!-- Tablo Başlıkları -->
            <thead>
                <tr>
                    <th>TC</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Nüfus İl</th>
                    <th>Nüfus İlçe</th>
                    <th>Doğum Tarihi</th>
                    <th>Baba Adı</th>
                    <th>Ana Adı</th>
                    <th>Baba TC</th>
                    <th>Ana TC</th>
                </tr>
            </thead>
            <tbody>
                <!-- Kullanıcı Verileri -->
                <% data.forEach(function(user) { %>
                    <tr>
                        <td><%= user.TC %></td>
                        <td><%= user.ADI %></td>
                        <td><%= user.SOYADI %></td>
                        <td><%= user.NUFUSIL %></td>
                        <td><%= user.NUFUSILCE %></td>
                        <td><%= user.DOGUMTARIHI %></td>
                        <td><%= user.BABAADI %></td>
                        <td><%= user.ANNEADI %></td>
                        <td><%= user.BABATC %></td>
                        <td><%= user.ANNETC %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
  </body>
</html>
